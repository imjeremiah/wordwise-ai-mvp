{
  "name": "wordwise-ai",
  "version": "1.0.0",
  "description": "WordWise AI - Grammar and style assistant powered by AI",
  "private": true,
  "scripts": {
    "dev": "node scripts/dev-with-logging.js",
    "dev:no-log": "node scripts/kill-port.js 3005 && next dev -p 3005",
    "dev:no-kill": "next dev -p 3005",
    "build": "next build",
    "build:export": "echo 'Static export temporarily disabled due to dynamic auth routes' && npm run build",
    "start": "next start -p 3005",
    "lint": "next lint",
    "clean": "npm run lint:fix && npm run format:write",
    "type-check": "tsc --noEmit",
    "lint:fix": "next lint --fix",
    "format:write": "prettier --write \"{app,lib,db,components,context,types}/**/*.{ts,tsx}\" --cache",
    "format:check": "prettier --check \"{app,lib,db,components,context,types}**/*.{ts,tsx}\" --cache",
    "analyze": "ANALYZE=true npm run build",
    "firebase:setup": "node scripts/setup-firebase.js",
    "firebase:verify-auth": "node scripts/verify-firebase-auth.js",
    "firestore:setup": "node scripts/setup-firestore.js",
    "firestore:deploy-rules": "node scripts/deploy-firestore-rules.js",
    "test:firebase": "tsx scripts/test-firebase.ts",
    "test:auth": "node scripts/test-auth-flows.js",
    "setup:env": "node scripts/setup-env.js",
    "emulators": "firebase emulators:start --only auth,firestore,functions",
    "emulators:ui": "firebase emulators:start --only auth,firestore,functions --inspect-functions",
    "prepare": "husky install"
  },
